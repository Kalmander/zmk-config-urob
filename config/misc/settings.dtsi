&mt {// layer-tap config
	flavor = "balanced";
	tapping-term-ms = <170>;
	quick-tap-ms = <150>;
	retro-tap;
};


&mmv_input_listener {
	MouseSlow {
		layers = <MOUSE_SLOW>;
		process-next;
		input-processors = <&zip_xy_scaler 1 4>;
	};
	MouseWarp {
		layers = <MOUSE_WARP>;
		process-next;
		input-processors = <&zip_xy_scaler 12 1>;
	};
};

&msc_input_listener {
	MouseSlow {
		layers = <MOUSE_SLOW>;
		process-next;
		input-processors = <&zip_scroll_scaler 1 4>;
	};
	MouseWarp {
		layers = <MOUSE_WARP>;
		process-next;
		input-processors = <&zip_scroll_scaler 16 1>;
	};
};

&uc {
  default-mode = <UC_MODE_LINUX>;
};
